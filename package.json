{
  "name": "telechat",
  "version": "1.0.0",
  "description": "A Telegram chatbot that uses OpenAI's GPT-3 API to generate responses to messages.",
  "main": "dist/main.js",
  "scripts": {
    "build": "ts-node --esm esbuild.config.ts",
    "start": "npm run build && pm2 start dist/main.js --no-autorestart",
    "reload": "npm run build && pm2 restart dist/main.js --no-autorestart"
  },
  "type": "module",
  "keywords": [
    "telechat",
    "telegram",
    "chatbot",
    "gpt-3",
    "openai"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.11.0",
    "esbuild": "^0.25.6",
    "express": "^5.1.0",
    "openai": "^5.9.0",
    "pm2": "^6.0.8",
    "telegraf": "^4.12.2",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.14",
    "dotenv": "^17.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
